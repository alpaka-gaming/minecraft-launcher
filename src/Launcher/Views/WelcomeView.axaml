<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Launcher.Converters"
             xmlns:vm="clr-namespace:Launcher.ViewModels"
             xmlns:prism="http://prismlibrary.com/"
             x:Class="Launcher.Views.WelcomeView"
             prism:ViewModelLocator.AutoWireViewModel="true">
    <UserControl.Resources>
        <converters:BoolInverterConverter x:Key="BoolInverterConverter" />
    </UserControl.Resources>
    <Design.DataContext>
        <vm:WelcomeViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="*" ColumnDefinitions="Auto,*">
        <Panel Grid.Row="0" Grid.Column="0" Width="100" Margin="8">
            <Label>Lisiados</Label>
        </Panel>
        <Panel Grid.Row="0" Grid.Column="1">
            <Image Source="../Assets/Background.png" VerticalAlignment="Top" />
            <Button Background="#0a8d48" HorizontalAlignment="Center" Width="100" HorizontalContentAlignment="Center">JUGAR</Button>
        </Panel>
    </Grid>
    
</UserControl>