<w:FluentWindow xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:w="clr-namespace:Avalonia.Controls"
              xmlns:vm="using:Launcher.ViewModels"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:prism="http://prismlibrary.com/"
              xmlns:local="clr-namespace:Launcher.Views"
              mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
              Width="800" Height="450"
              MinWidth="800" MinHeight="450"
              x:Name="MainWindow"
              x:Class="Launcher.MainWindow"
              WindowStartupLocation="CenterScreen"
              Icon="/Assets/Icon.ico"
              TransparencyLevelHint="AcrylicBlur"
              ExtendClientAreaToDecorationsHint="true"
              prism:ViewModelLocator.AutoWireViewModel="true"
              Title="Lisiados Minecraft Launcher">
    
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Background>
        <ImageBrush Source="{Binding Background}" Stretch="UniformToFill" />
    </Window.Background>
    
    <Panel Margin="{Binding #MainWindow.OffScreenMargin}">
        <local:WelcomeView />
    </Panel>
    
</w:FluentWindow>